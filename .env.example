# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/resume_tailor.log
ENABLE_CONSOLE_LOGGING=true
ENABLE_JSON_LOGGING=false

# Application Configuration
HOST=127.0.0.1
PORT=8000
DEBUG=true
RELOAD=true
# ===========================================
# Resume Tailor AI - Environment Configuration Template
# Copy this file to .env and update the values
# ===========================================

# Application Settings
APP_NAME=Resume Tailor AI
APP_VERSION=0.1.0
APP_HOST=0.0.0.0
APP_PORT=8000
APP_DEBUG=false
APP_RELOAD=false
APP_ENVIRONMENT=production
APP_ENABLE_AI_FEATURES=true
APP_ENABLE_METRICS=true
APP_ENABLE_TRACING=true

# Database Configuration (Required in production)
DB_DATABASE_URL=postgresql://username:password@hostname:5432/database_name
# OR use individual components:
# DB_DATABASE_HOST=your-db-host
# DB_DATABASE_PORT=5432
# DB_DATABASE_NAME=resume_tailor_prod
# DB_DATABASE_USER=your-db-user
# DB_DATABASE_PASSWORD=your-secure-db-password
DB_POOL_SIZE=20
DB_MAX_CONNECTIONS=50
DB_TIMEOUT=30

# Security Settings (REQUIRED - Change these!)
SECURITY_SECRET_KEY=your-super-secure-secret-key-at-least-32-characters-long-change-this
SECURITY_ALGORITHM=HS256
SECURITY_ACCESS_TOKEN_EXPIRE_MINUTES=15
SECURITY_REFRESH_TOKEN_EXPIRE_DAYS=7

# AI Service API Keys (Optional but recommended)
SECURITY_OPENAI_API_KEY=sk-your-openai-api-key-here
SECURITY_ANTHROPIC_API_KEY=your-anthropic-api-key-here

# CORS Settings (Update for your frontend domains)
SECURITY_CORS_ORIGINS=["https://yourdomain.com","https://www.yourdomain.com"]
SECURITY_CORS_CREDENTIALS=true

# Logging Configuration
LOG_LOG_LEVEL=INFO
LOG_LOG_FILE=/var/log/resume_tailor/app.log
LOG_ENABLE_CONSOLE_LOGGING=false
LOG_ENABLE_JSON_LOGGING=true
LOG_ROTATION_SIZE=50MB
LOG_RETENTION_COUNT=10

# File Upload Settings
APP_MAX_UPLOAD_SIZE=20971520  # 20MB
APP_ALLOWED_FILE_TYPES=[".pdf",".doc",".docx",".txt"]